set hlsearch
set incsearch
set background=dark
set nocompatible
set mouse=
syntax on
au BufNewFile,BufRead gerrit.config set filetype=gitconfig     
au BufNewFile,BufRead replication.config set filetype=gitconfig
au BufNewFile,BufRead secure.config set filetype=gitconfig
au BufNewFile,BufRead project.config set filetype=gitconfig
highlight ToDo ctermbg=yellow guibg=yellow
match ToDo '\%>78v.\+'
match ToDo '\s\+$'
